{
  "dashboard": {
    "title": "Quemiai WebSocket Metrics",
    "tags": ["websocket", "realtime"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active WebSocket Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "websocket_connections_active",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "WebSocket Message Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(websocket_messages_total[5m])",
            "legendFormat": "{{type}} - {{event}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Message Processing Latency (p50, p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(websocket_message_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 - {{event}}"
          },
          {
            "expr": "histogram_quantile(0.95, rate(websocket_message_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{event}}"
          },
          {
            "expr": "histogram_quantile(0.99, rate(websocket_message_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 - {{event}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Messages by Event Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (event) (rate(websocket_messages_total[5m]))"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 16,
    "version": 1
  }
}
